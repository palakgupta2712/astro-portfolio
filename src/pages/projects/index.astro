---
const PAGE_TITLE = "Projects ";
import BaseLayout from "@/layouts/base-layout.astro";
import ProjectCard from "@/components/project-card.astro";
import Text from "@/components/text.astro";
import PROJECTS from "@/constants/projects.ts"
---

<BaseLayout title={PAGE_TITLE}>
  <div class="max-w-screen-sm mx-auto py-8 sm:py-12">
    <Text variant="h1" class="text-stone-100 pb-4">
      {PAGE_TITLE}
    </Text>
    <div class="w-full flex gap-2 flex-wrap	items-center justify-center">
    {PROJECTS.map((project)=>{
      const icon = <project.icon class="fill-zinc-600 group-hover:fill-zinc-500 transition-colors duration-300"/>
      return <ProjectCard title={project.title} subtitle={project.subtitle} link={project.link} icon={icon}/>
    })}
  </div>
   
  </div>
</BaseLayout>

