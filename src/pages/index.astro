---
import { getCollection } from "astro:content";
import BaseLayout from "../layouts/base-layout.astro";
import "../styles/global.css";

const posts = await getCollection("posts");
---

<BaseLayout>
  <main class="max-w-screen-lg mx-auto m-6">
    <h1 class="text-5xl font-semibold">hello world</h1>

    <div class="py-6">
      <h3 class="text-xl font-semibold pb-2">My thoughts</h3>
      <div class="max-w-96">
        {
          posts.map((post) => (
            <div class="border-b border-gray-200 last:border-none hover:bg-gray-100 transition">
              <a href={`/blog/${post.slug}`} class="py-3 block px-2">
                <h4 class="font-medium text-gray-800">{post.data.title}</h4>
                <p class="text-sm text-gray-600">{post.data.description}</p>
              </a>
            </div>
          ))
        }
      </div>
    </div>
  </main>
</BaseLayout>
