---
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";

import { cn } from "@/utils/classname";

type Props = {
  altText: string;
  class?: string;
  image: Promise<{ default: ImageMetadata }>;
};

const { image, altText, ...props } = Astro.props;

if (!image)
  throw new Error(
    `"${image}" does not exist in glob: "src/assets/gallery/*.{jpeg,jpg,png,gif}"`
  );
---

<Image src={image} alt={altText} class={cn("w-full h-auto", props.class)} />
