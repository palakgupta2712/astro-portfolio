---
type Props = {
  alt: string;
  href: string;
};

const { href, alt } = Astro.props;
---

<a
  href={href}
  target="_blank"
  class="p-2 border border-neutral-800 rounded-lg text-neutral-500 active:text-neutral-300 active:border-neutral-500 hover:text-neutral-300 hover:border-neutral-700 outline-none ring-2 ring-transparent focus:ring-neutral-500 transition-all focus:text-neutral-300 hover:bg-neutral-800"
>
  <span class="sr-only">{alt}</span>
  <slot />
</a>
