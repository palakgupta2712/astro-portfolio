---

const { title, subtitle,link, icon } = Astro.props;
---

<a href={link}>
<div class="w-fit group bg-opacity-0 bg-neutral-300 cursor-pointer flex gap-3 py-3 items-center hover:bg-opacity-10 rounded-lg transition-colors duration-300 px-5">
    <span class="w-fit">
        {icon}
    </span>
    <div class="flex flex-col align-left">
    <h6 class="w-fit text-zinc-400  px-2 text-left  bg-zinc-500 bg-opacity-10 group-hover:bg-opacity-30 group-hover:text-neutral-300 text-lg font-medium font-extrabold	transition-colors duration-300">
       {title || "Nuxt Playground"}
    </h6>
    <p class="w-fit px-2 text-zinc-500 group-hover:text-zinc-300 text-left bg-zinc-500 bg-opacity-10 group-hover:bg-opacity-20 group-hover:text-neutral-400 text-base font-medium font-extrabold transition-colors duration-300">
        {subtitle || "Nuxt Playground  Nuxt Playground"}
    </p>
</div>
</div>
</a>