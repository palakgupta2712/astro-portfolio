---
import dayjs from "dayjs";
import { type TWork } from "../types/work.type";

type Props = TWork;

const { company, description, role, duration, isOnGoing } = Astro.props;

const startDate = dayjs(duration.from).format("MMM YYYY");
const endDate = isOnGoing ? "Present" : dayjs(duration.to).format("MMM YYYY");
---

<div
  class="cursor-default hover:bg-neutral-900 transition duration-300 -mx-6 py-4 shadow-sm px-6 rounded-lg"
>
  <div class="flex items-center pb-2">
    <h3 class="text-neutral-100 text-xl font-semibold flex-1">{company}</h3>
    <span class="text-neutral-500 text-sm">{startDate} - {endDate}</span>
  </div>

  <p class="text-neutral-400 font-medium text-lg pb-2">{role}</p>

  <p class="text-neutral-400 font-light">{description}</p>
</div>
